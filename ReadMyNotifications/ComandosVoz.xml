<?xml version="1.0" encoding="utf-8"?>

<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-US">
    <AppName> notifications </AppName>
    <!--<CommandPrefix> read </CommandPrefix>-->
    <Example> read my notifications </Example>

    <Command Name="Read">
      <Example> read my notifications </Example>
      <ListenFor RequireAppName="ExplicitlySpecified"> read my {builtin:AppName} </ListenFor>
      <Feedback> Checking your notifications... </Feedback>
      <Navigate />
    </Command>

  </CommandSet>

  <CommandSet xml:lang="es-ES">
    <AppName> notificaciones </AppName>
    <Example> lee mis notificaciones </Example>

    <Command Name="Read">
      <Example> lee mis notificaciones </Example>
      <ListenFor RequireAppName="ExplicitlySpecified"> lee mis {builtin:AppName} </ListenFor>
